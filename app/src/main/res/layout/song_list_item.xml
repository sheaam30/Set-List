<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reorder"
        android:src="@drawable/ic_reorder_24px"
        android:tint="@color/iconGray"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkbox"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="@id/reorder"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginStart="24dp"
        android:text="Random Item Here"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@id/checkbox"
        app:layout_constraintEnd_toEndOf="@id/clear"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:src="@drawable/ic_clear_24px"
        android:tint="@color/iconGray"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>